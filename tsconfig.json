{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./@types"
    ],
    "types": [
      "express",
      "jsonwebtoken",
      "http-errors",
      "passport",
      "cookie-parser",
      "cors",
      "morgan",
      "node-cron"
    ]
  }
}